---
title: Welcome to Casa San Miguel
---
#wrapper
  %header#banner
    #logo.col-sm-4
      %img{:alt => "", :src => "images/logo_x240.png"}
    #main-banner{"data-speed" => "2", "data-type" => "background"}
      #bx-wrapper
        .bx-loading
          .loader
            .dot.dot1
            .dot.dot2
            .dot.dot3
            .dot.dot4
        .bx-content
          %h2.welcome= data.marketing.welcome
        %nav.bx-nav
          %a.bx-prev{:href => "#"}
          %a.bx-next{:href => "#"}
        .banner-thumbnail-images
          %a{:href => "#", :style => "background-image:url(images/banner-thumbs-3.jpg)"}
          %a{:href => "#", :style => "background-image:url(images/banner-thumbs-2.jpg)"}
          %a{:href => "#", :style => "background-image:url(images/banner-thumbs-1.jpg)"}
        .banner-splash
          - data.marketing.banner_images.each do |image|
            %img.splash-image{:alt => "image03", :src => "images/#{image.src}", :title => image.title}
  %nav#navigation
    %section.branding.col-sm-2
      %img.logo{:alt => "", :src => "images/logo.png"}
    %ul#primary-nav.col-sm-10
      %li
        %a{:href => "program.html"} Program
      %li
        %a{:href => "arts.html"} Arts
      %li
        %a{:href => "hotel.html"} Hotel
      %li
        %a{:href => "museum.html"} Museum
      %li
        %a{:href => "cafe.html"} Cafe
      %li
        %a{:href => "investor.html"} Support
  %section#about.section
    .sub-section
      .content
        %h1.title About CASA San Miguel
        %p.lead= fake_lorem
        %p.col-sm-6= fake_lorem
        %p.col-sm-6= fake_lorem
        .clearfix
  %section.spacer.children
  %section#news.section
    %h1.title News and Events
    %ul.news-list
      = 4.times do |index|
        %li.news-item
          %section.news-thumb.col-md-4
            .meta
              %span.meta-date October
              %span.meta-day= index + 1
              %span.meta-year 2013
            %img{:alt => "", :src => "uploads/images/2.jpg"}
          %section.news-content.col-md-8
            %h2.news-title Some news here
            %p= fake_lorem
  #contact-us.section
    #contact-info.sub-section
      %ul
        %li.contact
          %i.icon-map-marker
          = data.contact_details.address
        %li.contact
          %i.icon-phone 
          = data.contact_details.phone_number
        %li.contact
          %i.icon-envelope 
          = data.contact_details.email
    #map-canvas.sub-section
